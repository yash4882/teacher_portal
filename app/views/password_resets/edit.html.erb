<div class="login-body">
	<div class="login-container">
		<div class="login-box">
			<div class="logo">Reset Password</div>
			<%= form_with model: @teacher, url: password_reset_path(token: params[:token]), class: "login-form" do |form| %>
				<% if form.object.errors.any? %>
					<% form.object.errors.full_messages.each do |message| %>
						<div><%= message %></div>
					<% end %>
				<% end %>
	
				<div class="form-group">
					<%= form.label :password, class: "form-label" %>
					<%= form.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
				</div>

				<div class="form-group">
					<%= form.label :password_confirmation,"Confirm Password", class: "form-label" %>
					<%= form.password_field :password_confirmation, class: "form-control", placeholder: "Enter your Confirm password", required: true %>
				</div>

				<div class="form-group">
					<%= form.submit "Reset Password", class: "login-btn btn btn-primary" %>
				</div>
			<% end %>
			<%= link_to 'Back', root_path %>
  		</div>	
  	</div>
</div>