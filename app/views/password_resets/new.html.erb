<div class="login-body">
    <div class="login-container">
        <div class="login-box">
            <div class="logo">Reset Password</div>
			<%= form_with model: @teacher, url: password_reset_path, class: "login-form" do |form| %>
				<div class="form-group">
					<%= form.label :email, class: "form-label" %>
					<%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
				</div>		

				<div>
					<%= form.submit "Reset Password", class: "login-btn btn btn-primary"%>
				</div>
			<% end %>
    	</div>
    </div>
</div>