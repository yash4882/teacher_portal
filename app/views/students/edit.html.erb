<div class="login-body">
    <div class="login-container">
        <div class="login-box">
            <div class="logo">Edit Student</div>

            <%= form_with model: @student, local: true, class: "login-form" do |form| %>
              <div class="form-group">
                <%= form.label :name, class: "form-label" %>
                <%= form.text_field :name, class: "form-control", placeholder: "Enter your name", required: true %>
              </div>

              <div class="form-group">
                <%= form.label :subject, class: "form-label" %>
                <%= form.text_field :subject, class: "form-control", placeholder: "Enter your subject", required: true %>
              </div>

              <div class="form-group">
                <%= form.label :marks, class: "form-label" %>
                <%= form.number_field :marks, class: "form-control", placeholder: "Enter your marks", required: true %>
              </div>

              <div class="form-group">
                <%= form.submit 'Update Student', class: "login-btn btn btn-primary" %>
              </div>
            <% end %>
            <%= link_to 'Back', root_path %>
        </div>
    </div>
</div>

